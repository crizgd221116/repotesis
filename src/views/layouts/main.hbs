<body>
  <nav class="navbar navbar-repo">
    <a class="navbar-brand" href="/">
      <img src="/images/clima.png" height="54" alt="repositorio">
      <h4> Repositorio Meteorológico</h3>
    </a>
    <form class="form-inline" style="justify-content: space-between;">
      {{#if user}}
      <div class="btn-group">
        <button type="button" class="btn btn btn-outline-info my-2 my-sm-0 dropdown-toggle" data-toggle="dropdown"
          style="color: white;">
         Bienvenido!
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="/users/editinfo/{{_id}}">Editar Perfil</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/">Cerrar Sesión</a>
        </div>
      </div>
      {{else}}
      <a href="/users/signin" class="btn btn btn-outline-info my-2 my-sm-0" style="margin-right:5px;color: white;"
        type="submit">Iniciar sesión</a>
      <a href="/users/register" class="btn btn btn-outline-info my-2 my-sm-0" type="submit"
        style="color: white;">Registrarse</a>
      {{/if}}

    </form>
  </nav>
  {{> messages }}
  {{{body}}}
  {{> errors }}
  
</body>
